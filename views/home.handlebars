<h1>Suas notas</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Titulo:</th>
            <th scope="col">Acoes:</th>
        </tr>
    </thead>
    <tbody>
        {{#each notes}}
        <tr>
            <th scope="row">{{@index}}</th>
            <td class="title-column"><a href="notes/{{this._id}}">{{this.title}}</a></td>
            <td class="action-columns">
                <a href="notes/edit/{{this._id}}" class="btn btn-primary">Editar</a>
                <form action="notes/delete" method="post">
                    <input type="hidden" name="id" value="{{this._id}}">
                    <input type="submit" class="btn btn-danger" value="Remover">
                </form>
            </td>
        </tr>
            {{else}}
                <p>Nao ha notas no sistema ainda, <a href="notes">Clique aqui para adicionar</a></p>
        {{/each}}
    </tbody>
</table>